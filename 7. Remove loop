void removeLoop(struct Node* loopNode, struct Node* head) {
    struct Node* ptr1 = head;
    struct Node* ptr2;
    while (1) {
        ptr2 = loopNode;
        while (ptr2->next != loopNode && ptr2->next != ptr1)
            ptr2 = ptr2->next;
        if (ptr2->next == ptr1) break;
        ptr1 = ptr1->next;
    }
    ptr2->next = NULL;
}
