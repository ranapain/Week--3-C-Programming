struct Node* addTwoNumbers(struct Node* l1, struct Node* l2) {
    struct Node* result = NULL, **node = &result;
    int carry = 0;

    while (l1 || l2 || carry) {
        int sum = carry;
        if (l1) { sum += l1->data; l1 = l1->next; }
        if (l2) { sum += l2->data; l2 = l2->next; }

        carry = sum / 10;
        *node = malloc(sizeof(struct Node));
        (*node)->data = sum % 10;
        (*node)->next = NULL;
        node = &((*node)->next);
    }
    return result;
}
